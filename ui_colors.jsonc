    "legend_green_border":   "#A7F3D0",                     // Improvement legend border [Mint Border]
    "legend_neutral_bg":     "#FFFFFF",                     // Neutral legend bg [White]
    "legend_neutral_border": "#D0D7DE",                     // Neutral legend border [Gray Blue 300/350]

