{
  ////////////////////////////////////////////////////////////////////////////
  // ui_colors.jsonc — HUMAN-READABLE THEME (every line explains usage)
  ////////////////////////////////////////////////////////////////////////////

  "meta": {
    "schema_version": "1"                                   // Version gate for runtime checks
  },

  // ─────────────────────────────────────────────────────────────────────────
  // TYPOGRAPHY: global sizes + tunables the function reads
  // ─────────────────────────────────────────────────────────────────────────
  "typography": {
    "font_family": "Arial, Helvetica, sans-serif",          // Global font stack

    "scale": {
      "base_px":        "10",                               // Base body text size (px)
      "section_hdr_px": "11",                               // Small section headers (px)
      "main_hdr_px":    "14",                               // Big top header text (px)
      "run_hdr_px":     "11"                                // “Run Details” bar text (px)
    },

    "weights": {
      "normal": "400",                                      // Regular font weight
      "bold":   "700"                                       // Emphasis font weight
    },

    "line_height": {
      "base":   "12px",                                     // Body line-height (tight)
      "header": "16px"                                      // Header line-height (tight)
    }
  },

  // ─────────────────────────────────────────────────────────────────────────
  // PRIMITIVE TOKENS: shared paddings/radii/borders to get tiny gaps
  // ─────────────────────────────────────────────────────────────────────────
  "components": {
    "chip": {
      "radius_px":       "4",                               // Chip corner radius
      "pad_y_px":        "6",                               // Chip vertical padding
      "pad_x_px":        "8",                               // Chip horizontal padding
      "gap_px":          "6",                               // Gap between chips
      "border_color":    "#D0D7DE",                         // Generic chip border [Gray Blue 300/350]
      "border_width_px": "1"                                // Chip border width (px)
    },
    "table": {
      "radius_px":       "4",                               // Table corner radius
      "pad_y_px":        "6",                               // Cell vertical padding
      "pad_x_px":        "8",                               // Cell horizontal padding
      "border_color":    "#D0D7DE",                         // Row/divider border [Gray Blue 300/350]
      "row_zebra_even":  "#FFFFFF",                         // Even row background [White]
      "row_zebra_odd":   "#FFFFFF"                          // Odd  row background [White]
    }
  },

  // ─────────────────────────────────────────────────────────────────────────
  // PAGE / HEADER / PLATE
  // ─────────────────────────────────────────────────────────────────────────
  "header": {
    "success_bg": "#658354",                                // Top header bar when SUCCESS [Matte Green / desaturated fern]
    "failure_bg": "#A94442",                                // Top header bar when FAILURE [Rich Red]
    "text":       "#FFFFFF"                                 // Top header text [White]
  },

  "plate": {
    "page_bg":    "#F3F5F7",                                // Whole page background [Cloud Gray]
    "background": "#FFFFFF",                                // Card background [White]
    "border":     "#D0D7DE"                                 // Card/outer border [Gray Blue 300/350]
  },

  // Title strip inside the Run Details box (and used by code for other strips)
  "run_details": {
    "title_bg_success":   "#146C43",                        // Section bar when SUCCESS [Deep Emerald]
    "title_bg_failure":   "#8D1B1B",                        // Section bar when FAILURE [Burgundy]
    "title_text_success": "#FFFFFF",                        // Section bar text on SUCCESS [White]
    "title_text_failure": "#FFFFFF"                         // Section bar text on FAILURE [White]
  },

  // ─────────────────────────────────────────────────────────────────────────
  // CHIP SYSTEM: legacy + new per-chip configs and rules
  // ─────────────────────────────────────────────────────────────────────────
  "chips": {
    // Legacy chip palette used for Run Details meta chips (exact CSV tones)
    "success_bg":   "#F0FFF4",                              // Chip bg SUCCESS [Mint White]
    "failure_bg":   "#FDF2F2",                              // Chip bg FAILURE [Rosé 50]
    "success_text": "#065F46",                              // Chip text SUCCESS [Deep Green]
    "failure_text": "#7F1D1D",                              // Chip text FAILURE [Dark Rose]
    "border":       "#D0D7DE",                              // Default chip border [Gray Blue 300/350]

    // JSONC-driven DEPLOYMENT chip
    "deployment": {
      "color_rules": [
        { "match_type": "text",  "match": "Succeeded", "label": "DEPLOYMENT",
          "color": { "bg": "#ECFDF5", "text": "#065F46", "border": "#D0D7DE" } }, // Success → green [Mint 50 + Deep Green]
        { "match_type": "regex", "match": "(?i)warn|partial", "label": "DEPLOYMENT",
          "color": { "bg": "#FFFBEB", "text": "#92400E", "border": "#FDE68A" } }, // Warning → amber [Amber 50/300]
        { "match_type": "regex", "match": "(?i)fail|error", "label": "DEPLOYMENT",
          "color": { "bg": "#FEF2F2", "text": "#7F1D1D", "border": "#D0D7DE" } }  // Fail → red [Rosé 50 + Dark Rose]
      ]
      // "force_color": { "bg": "#111827", "text": "#FFFFFF", "border": "#111827" },
      // "force_label": "DEPLOYMENT (OVERRIDE)"
    },

    // JSONC-driven PMD — CHANGESET chip (based on HIGH count)
    "pmd_changeset": {
      "color_rules": [
        { "match_type": "regex", "match": "^0$", "label": "PMD — CHANGESET",
          "color": { "bg": "#ECFDF5", "text": "#065F46", "border": "#D0D7DE" } }, // 0 ⇒ green
        { "match_type": "regex", "match": "^[1-2]$", "label": "PMD — CHANGESET",
          "color": { "bg": "#FFFBEB", "text": "#92400E", "border": "#FDE68A" } }, // 1–2 ⇒ amber
        { "match_type": "regex", "match": "^[3-9]\\d*$", "label": "PMD — CHANGESET",
          "color": { "bg": "#FFF0F0", "text": "#7F1D1D", "border": "#D0D7DE" } }  // ≥3 ⇒ red
      ]
    },

    // JSONC-driven DURATION chip (thresholds in ms)
    "duration": {
      "thresholds_ms": [ 300000, 600000 ],                  // 5m ok, 10m warn
      "colors": {
        "ok":   { "bg": "#ECFDF5", "text": "#065F46", "border": "#D0D7DE" }, // OK → green
        "warn": { "bg": "#FFFBEB", "text": "#92400E", "border": "#FDE68A" }, // WARN → amber
        "fail": { "bg": "#FEF2F2", "text": "#7F1D1D", "border": "#D0D7DE" }  // FAIL → red
      }
      // "force_color": { "bg": "#111827", "text": "#FFFFFF", "border": "#111827" },
      // "force_label": "DURATION (OVERRIDE)"
    }
  },

  // ─────────────────────────────────────────────────────────────────────────
  // QUICK LINKS: 4 tiles under Run Details (CSV blue)
  // ─────────────────────────────────────────────────────────────────────────
  "quick_links": {
    "tile_1_bg": "#2E4CA4",                                 // Tile bg [Cadence Blue] (Open Logs)
    "tile_2_bg": "#2E4CA4",                                 // Tile bg [Cadence Blue] (Original PMD Report)
    "tile_3_bg": "#2E4CA4",                                 // Tile bg [Cadence Blue] (TMD High Patterns)
    "tile_4_bg": "#2E4CA4",                                 // Tile bg [Cadence Blue] (ForceDeploy)
    "text":     "#FFFFFF",                                  // Tile text [White]
    "gap_px":   "6"                                         // Space between tiles (px)
  },

  // ─────────────────────────────────────────────────────────────────────────
  // STATUS SUMMARY (3 tiles): DEPLOYMENT / PMD — CHANGESET / DURATION
  // ─────────────────────────────────────────────────────────────────────────
  "status_summary": {
    "title_text": "#1F2937",                                // Section title [Slate 800]
    "label_text": "#374151",                                // Tile label text [Slate 700]
    "value_text": "#1F2937",                                // Value text [Slate 800]
    "corner_radius": "6",                                   // Tile radius (px)

    // DEPLOYMENT tile (fallback bgs; chips above usually drive colors)
    "deployment_success_bg": "#ECFDF5",                     // Success bg [Mint 50]
    "deployment_failure_bg": "#FEF2F2",                     // Failure bg [Rosé 50]
    "deployment_label_success": "#374151",                  // Success label [Slate 700]
    "deployment_value_success": "#065F46",                  // Success value [Deep Green]
    "deployment_label_failure": "#7F1D1D",                  // Failure label [Dark Rose]
    "deployment_value_failure": "#7F1D1D",                  // Failure value [Dark Rose]

    // PMD — CHANGESET tile (static accent)
    "pmd_bg":   "#FFF0F0",                                  // PMD bg [Rosé Tint]
    "pmd_text": "#7F1D1D",                                  // PMD text [Dark Rose]

    // DURATION tile (static accent)
    "time_bg":   "#EEF2FF",                                 // Duration bg [Indigo 50]
    "time_text": "#1D4ED8"                                  // Duration text [Blue 700]
  },

  // ─────────────────────────────────────────────────────────────────────────
  // TABLE PALETTES (PMD Review)
  // ─────────────────────────────────────────────────────────────────────────
  "tables": {
    "pmd_review": {
      "header_bg":     "#0B1B3A",                           // Table header strip [Navy Night]
      "header_text":   "#FFFFFF",                           // Table header text [White]
      "row_border":    "#1E293B",                           // Row/border [Slate 800]
      "row_zebra_even":"#FFFFFF",                           // Even row [White]
      "row_zebra_odd": "#FFFFFF"                            // Odd row  [White]
    }
  },

  // ─────────────────────────────────────────────────────────────────────────
  // SECTION-SPECIFIC SETTINGS
  // ─────────────────────────────────────────────────────────────────────────
  "sections": {
    "pmd_review": {
      "title": "PMD Review",                                // “PMD Review” heading
      "typography": {
        "title_px":  "12",                                  // Title size (px)
        "header_px": "11",                                  // Table header size (px)
        "cell_px":   "10"                                   // Table cell size (px)
      },
      // Optional per-section palette overrides (kept in sync with table)
      "palette": {
        "header_bg":       "#0B1B3A",                       // Header strip [Navy Night]
        "header_text":     "#FFFFFF",                       // Header text [White]
        "row_border":      "#1E293B",                       // Border [Slate 800]
        "row_zebra_even":  "#FFFFFF",                       // Zebra even [White]
        "row_zebra_odd":   "#FFFFFF"                        // Zebra odd  [White]
      },

      // Column order/visibility — set "show": false to hide
      "table": {
        "columns": [
          { "key": "name",           "label": "NAME",             "align": "left",  "width": "35%", "show": true  },
          { "key": "original_pair",  "label": "ORIGINAL (HIGH)",  "align": "right", "width": "15%", "show": true  },
          { "key": "current_pair",   "label": "CURRENT (HIGH)",   "align": "right", "width": "15%", "show": true  },
          { "key": "delta_high",     "label": "Δ HIGH",           "align": "right", "width": "10%", "show": true  },
          { "key": "author",         "label": "AUTHOR",           "align": "left",  "width": "25%", "show": true  }
        ]
      }
    }
  },

  // ─────────────────────────────────────────────────────────────────────────
