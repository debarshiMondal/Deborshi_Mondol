    "delta_reg_bg":          "#FFE3E3",                     // Δ>0 bg [Rosé 150]
    "delta_reg_border":      "#F5BCBC",                     // Δ>0 border [Soft Red]
    "delta_reg_text":        "#B91C1C",                     // Δ>0 text [Bright Red]

    // ✅ Added generic keys the function expects (map to “success/green” tones)
    "delta_imp_bg":          "#F0FFF4",                     // Δ<0 bg (generic) [Mint White]
    "delta_imp_border":      "#A7F3D0",                     // Δ<0 border (generic) [Mint Border]
    "delta_imp_text":        "#065F46",                     // Δ<0 text (generic) [Deep Green]

    // (We still keep the variants in case you want per-result overrides later)
    "delta_imp_success_bg":     "#F0FFF4",                  // Δ<0 bg on SUCCESS [Mint White]
    "delta_imp_success_border": "#A7F3D0",                  // Δ<0 border on SUCCESS [Mint Border]
    "delta_imp_success_text":   "#065F46",                  // Δ<0 text on SUCCESS [Deep Green]
    "delta_imp_failure_bg":     "#FDF2F2",                  // Δ<0 bg on FAILURE [Rosé 50]
    "delta_imp_failure_border": "#FECACA",                  // Δ<0 border on FAILURE [Rosé 300]
    "delta_imp_failure_text":   "#7F1D1D",                  // Δ<0 text on FAILURE [Dark Rose]

    // ✅ Generic NEUTRAL delta (already used by function; kept explicit)
    "delta_neutral_bg":      "#EEEEEE",                     // Δ=0 bg [Light Gray]
    "delta_neutral_border":  "#DDDDDD",                     // Δ=0 border [Gray]
    "delta_neutral_text":    "#444444",                     // Δ=0 text [Charcoal]

    // Row left stripe + row backgrounds
    "neutral_left_stripe":   "#D0D7DE",                     // Neutral row left stripe [Gray Blue 300/350]
    "regression_row_bg":     "#FFEFEF",                     // Δ>0 row bg [Rosé 100]
    "regression_left_stripe":"#B91C1C",                     // Δ>0 left stripe [Bright Red]

    // ✅ Added generic IMPROVEMENT row keys the function expects
    "improvement_row_bg":       "#F0FFF4",                  // Δ<0 row bg (generic) [Mint White]
    "improvement_left_stripe":  "#065F46",                  // Δ<0 left stripe (generic) [Deep Green]
    "improvement_text":         "#065F46",                  // Δ<0 row text (generic) [Deep Green]

    // (We still keep the explicit “success/failure” improvement variants)
    "improve_success_row_bg":    "#F0FFF4",                 // Δ<0 row bg on SUCCESS [Mint White]
    "improve_success_left_stripe":"#065F46",                // Δ<0 left stripe on SUCCESS [Deep Green]
    "improve_success_text":      "#065F46",                 // Δ<0 text on SUCCESS [Deep Green]
    "improve_failure_row_bg":    "#FDF2F2",                 // Δ<0 row bg on FAILURE [Rosé 50]
    "improve_failure_left_stripe":"#7F1D1D",                // Δ<0 left stripe on FAILURE [Dark Rose]
    "improve_failure_text":      "#7F1D1D",                 // Δ<0 text on FAILURE [Dark Rose]

    // Links & text
    "link_normal": "#0A58CA",                               // Normal link [Blue Link]
    "link_high":   "#B91C1C",                               // High emphasis link [Bright Red]
    "text_high":   "#B91C1C",                               // High/regression text [Bright Red]
    "text_normal": "#1F2937"                                // Neutral row text [Slate 800]
  },

  // ─────────────────────────────────────────────────────────────────────────
