{
  //////////////////////////////////////////////////////////////////////////////
  // ui_colors.jsonc — FULLY ANNOTATED (compatible with old + new function)
  //////////////////////////////////////////////////////////////////////////////

  "meta": {
    "schema_version": "1"                                  // REQUIRED schema gate
  },

  "typography": {                                          // Global typography
    "font_family": "Arial, Helvetica, sans-serif",         // Web-safe font stack
    "scale": {
      "base_px": "10",                                     // Base body size (px)
      "section_hdr_px": "11",                              // Small section heads
      "main_hdr_px": "14",                                 // Big top header
      "run_hdr_px": "11"                                   // “Run Details” bar
    },
    "weights": {
      "normal": "400",                                     // Normal weight
      "bold": "700"                                        // Bold weight
    },
    "line_height": {
      "base": "12px",                                      // Base line-height
      "header": "16px"                                     // Header line-height
    }
  },

  "components": {                                          // Primitive tokens
    "chip": {
      "radius_px": "4",                                    // Chip corner radius
      "pad_y_px": "6",                                     // Vertical padding
      "pad_x_px": "8",                                     // Horizontal padding
      "gap_px": "6",                                       // Gap between chips
      "border_color": "#d0d7de",                           // Grey blue 300/350
      "border_width_px": "1"                               // Chip border width
    },
    "table": {
      "radius_px": "4",                                    // Table corner radius
      "pad_y_px": "6",                                     // Cell vertical padding
      "pad_x_px": "8",                                     // Cell horizontal padding
      "border_color": "#e5e7eb",                           // Gray 200
      "row_zebra_even": "#ffffff",                         // White
      "row_zebra_odd":  "#f7f7f7"                          // Very light gray
    }
  },

  "header": {                                              // Top banner
    "success_bg": "#146c43",                               // Dark emerald green
    "failure_bg": "#8d1b1b",                               // Dark red/burgundy
    "text": "#ffffff"                                      // White text
  },

  "plate": {                                               // Page/card colors
    "page_bg":    "#f6f8fa",                               // Light blue-gray
    "background": "#ffffff",                               // White card
    "border":     "#d0d7de"                                // Grey blue border
  },

  "run_details": {                                         // Run Details bar
    "strip_success_bg": "#146c43",                         // Success stripe
    "strip_failure_bg": "#8d1b1b",                         // Failure stripe
    "title_text": "#ffffff",                               // TEXT COLOR for title (legacy key)
    "title_bg_success": "#146c43",                         // Success bar BG
    "title_bg_failure": "#8d1b1b",                         // Failure bar BG
    "title_text_success": "#ffffff",                       // Title text on success
    "title_text_failure": "#ffffff"                        // Title text on failure
  },

  // CHIP SYSTEM (per-chip settings + legacy fallbacks)
  "chips": {
    "success_text": "#0f5132",                             // Deep green text
    "failure_text": "#842029",                             // Deep maroon text
    "border": "#d0d7de",                                   // Default chip border

    // Legacy backgrounds expected by older builds
    "success_bg": "#ecfdf5",                               // Mint green background
    "failure_bg": "#fef2f2",                               // Pale red background

    "deployment": {                                        // Deployment chip
      "color_rules": [
        { "match_type": "text", "match": "Succeeded", "label": "DEPLOYMENT",
          "color": { "bg": "#ecfdf5", "text": "#065f46", "border": "#a7f3d0" } }, // Green OK
        { "match_type": "regex", "match": "(?i)warn|partial", "label": "DEPLOYMENT",
          "color": { "bg": "#fffbeb", "text": "#92400e", "border": "#fde68a" } }, // Amber WARN
        { "match_type": "regex", "match": "(?i)fail|error", "label": "DEPLOYMENT",
          "color": { "bg": "#fef2f2", "text": "#7f1d1d", "border": "#fecaca" } }  // Red FAIL
      ]
    },

    "pmd_changeset": {                                     // PMD — CHANGESET chip
      "color_rules": [
        { "match_type": "regex", "match": "^0$", "label": "PMD — CHANGESET",
          "color": { "bg": "#ecfdf5", "text": "#065f46", "border": "#a7f3d0" } }, // Zero high ⇒ green
        { "match_type": "regex", "match": "^[1-2]$", "label": "PMD — CHANGESET",
          "color": { "bg": "#fffbeb", "text": "#92400e", "border": "#fde68a" } }, // 1–2 ⇒ amber
        { "match_type": "regex", "match": "^[3-9]\\d*$", "label": "PMD — CHANGESET",
          "color": { "bg": "#fef2f2", "text": "#7f1d1d", "border": "#fecaca" } }  // ≥3 ⇒ red
      ]
    },

    "duration": {                                          // Duration chip
      "thresholds_ms": [ 300000, 600000 ],                 // 5m OK, 10m WARN
      "colors": {
        "ok":   { "bg": "#ecfdf5", "text": "#065f46", "border": "#a7f3d0" }, // Green
        "warn": { "bg": "#fffbeb", "text": "#92400e", "border": "#fde68a" }, // Amber
        "fail": { "bg": "#fef2f2", "text": "#7f1d1d", "border": "#fecaca" }  // Red
      }
      // "force_color": { "bg": "#111827", "text": "#ffffff", "border": "#111827" }, // Optional hard override
      // "force_label": "DURATION (OVERRIDDEN)"                                      // Optional label override
    }
  },

  "quick_links": {                                         // Buttons under Run Details
    "tile_1_bg": "#1f6feb",                                // Bright azure
    "tile_2_bg": "#0969da",                                // Cobalt blue
    "tile_3_bg": "#1750a7",                                // Indigo blue
    "tile_4_bg": "#0a3069",                                // Navy
    "text": "#ffffff",                                     // White label text
    "gap_px": "6"                                          // Spacing between tiles
  },

  "status_summary": {                                      // Titles + legacy tile colors
    "title_text": "#111827",                               // Near-black text
    "label_text": "#374151",                               // Gray 700 label
    "value_text": "#111827",                               // Value text color
    "corner_radius": "6",                                  // Chip corner radius

    // Legacy backgrounds some older scripts expect:
    "deployment_success_bg": "#ecfdf5",                    // Greenish success
    "deployment_failure_bg": "#fef2f2",                    // Reddish failure

    "pmd_bg": "#ecfdf5",                                   // Legacy PMD tile bg
    "time_bg": "#eef2ff"                                   // Legacy duration tile bg
  },

  "tables": {                                              // Table palettes
    "pmd_review": {
      "header_bg": "#111827",                              // Slate/near-black
      "header_text": "#ffffff",                            // White header text
      "row_border": "#e5e7eb",                             // Gray 200 borders
      "row_zebra_even": "#ffffff",                         // White rows
      "row_zebra_odd": "#f7f7f7"                           // Light gray rows
    }
  },

  "sections": {                                            // Section settings
    "pmd_review": {
      "title": "PMD Review",                                // Section title
      "typography": {
        "title_px": "12",                                    // Title font size
        "header_px": "11",                                   // Table header size
        "cell_px": "10"                                      // Table cell size
      },
      "palette": {                                          // OPTIONAL per-section palette overrides
        "header_bg": "#111827",                              // Override header bg
        "header_text": "#ffffff",                            // Override header text
        "row_border": "#e5e7eb",                             // Override row border
        "row_zebra_even": "#ffffff",                         // Override zebra even
        "row_zebra_odd": "#f7f7f7"                           // Override zebra odd
      },
      "table": {
        "columns": [                                         // Column order/visibility
          { "key": "name",          "label": "NAME",            "align": "left",  "width": "35%", "show": true  },
          { "key": "original_pair", "label": "ORIGINAL (HIGH)", "align": "right", "width": "15%", "show": true  },
          { "key": "current_pair",  "label": "CURRENT (HIGH)",  "align": "right", "width": "15%", "show": true  },
          { "key": "delta_high",    "label": "Δ HIGH",          "align": "right", "width": "10%", "show": true  },
          { "key": "author",        "label": "AUTHOR",          "align": "left",  "width": "25%", "show": true  }
          // Optional extras:
          // { "key": "original_total", "label": "ORIGINAL (TOTAL)", "align": "right", "width": "10%", "show": false },
          // { "key": "original_high",  "label": "ORIGINAL (HIGH)",  "align": "right", "width": "10%", "show": false },
          // { "key": "current_total",  "label": "CURRENT (TOTAL)",  "align": "right", "width": "10%", "show": false },
          // { "key": "current_high",   "label": "CURRENT (HIGH)",   "align": "right", "width": "10%", "show": false }
        ]
      }
    }
  },

  "pmd_review": {                                           // PMD extras (legend, stripes, links)
    // Duplicate header keys for legacy scripts that look here instead of tables/sections:
    "header_bg": "#111827",                                 // Header BG (duplicate)
    "header_text": "#ffffff",                               // Header text (duplicate)
    "row_border": "#e5e7eb",                                // Row border (duplicate)

    "legend_red_bg": "#ffefef",                             // Pale red sample
    "legend_red_border": "#f5bcbc",                         // Soft red border
    "legend_green_bg": "#ecfdf5",                           // Mint green sample
    "legend_green_border": "#a7f3d0",                       // Mint border
    "legend_neutral_bg": "#ffffff",                         // Neutral sample
    "legend_neutral_border": "#dddddd",                     // Neutral border

    "delta_reg_bg": "#ffe3e3",                              // Δ pill bg (regression)
    "delta_reg_border": "#f5bcbc",                          // Δ pill border (regression)
    "delta_reg_text": "#b71c1c",                            // Δ pill text (regression)

    "delta_imp_bg": "#ecfdf5",                              // Δ pill bg (improvement)
    "delta_imp_border": "#a7f3d0",                          // Δ pill border (improvement)
    "delta_imp_text": "#065f46",                            // Δ pill text (improvement)

    "delta_neutral_bg": "#eeeeee",                          // Δ pill bg (neutral)
    "delta_neutral_border": "#dddddd",                      // Δ pill border (neutral)
    "delta_neutral_text": "#444444",                        // Δ pill text (neutral)

    "neutral_left_stripe": "#dcdcdc",                       // Neutral row stripe
    "regression_row_bg": "#ffefef",                         // Row bg when Δ>0
    "regression_left_stripe": "#c62828",                    // Red stripe
    "improvement_row_bg": "#ecfdf5",                        // Row bg when Δ<0
    "improvement_left_stripe": "#2e7d32",                   // Green stripe
    "improvement_text": "#065f46",                          // Green text

    "link_normal": "#0a58ca",                               // Link color (blue)
    "link_high":   "#b91c1c",                               // Link color (red/highlight)
    "text_high":   "#b91c1c",                               // High-attention text
    "text_normal": "#1f2937"                                // Normal row text
  },

  "success_section": {                                      // SUCCEEDED list colors
    "file_row_bg": "#f8fafc",                               // Off-white blue
    "file_row_border": "#d0d7de",                           // Gray blue border
    "author_row_bg": "#ffffff",                             // White
    "author_row_border": "#d0d7de",                         // Gray blue border
    "title_text": "#065f46"                                 // Emerald title
  },

  "failure_section": {                                      // FAILURE list colors
    "error_row_bg": "#fff1f2",                              // Rose 50+
    "error_row_border": "#fecaca",                          // Rose 300
    "author_row_bg": "#ffffff",                             // White
    "author_row_border": "#d0d7de",                         // Gray blue border
    "title_text": "#7f1d1d"                                 // Dark red title
  },

  "footer": {                                               // Footer stripe
    "bg": "#0b1020",                                        // Very dark navy
    "text": "#e5e7eb",                                      // Gray 200 text
    "copyright_text": "© 2025 Cadence Design Systems, Inc. | SFDC Deployment Report generated by the Cadence DevOps Team"
  },

  "formatters": {                                           // Central formatters
    "duration": "h:mm:ss",                                  // h:mm:ss formatting
    "percent":  "0.0%",                                     // Reserved (future)
    "number":   "#,##0"                                     // Reserved (future)
  },

  "strings": {                                              // Static labels & icons
    "header": {
      "title_core": "Deployment",                           // Mid word in header
      "title_suffix": "Report",                             // Last word
      "success_word": "Success",                            // When success
      "failure_word": "Failure"                             // When failure
    },
    "run_details": {
      "title": "Run Details"                                // Visible title text
    },
    "chips": {
      "repo": "REPO", "branch": "BRANCH", "request_id": "REQUEST ID",
      "run_ist": "RUN (IST)", "org_api": "ORG NAME + API", "deploy_user": "DEPLOY USER"
    },
    "sections": {
      "status_summary": "Status Summary",
      "deployment_tile": "DEPLOYMENT",
      "pmd_tile": "PMD — CHANGESET",
      "duration_tile": "DURATION",
      "duration_start": "Start",
      "duration_end": "End",
      "pmd_review": "PMD Review",
      "failure_title": "All Component Failures:",
      "success_title": "Changeset file/s ..."
    },
    "icons": {
      "deployment": "",                                     // e.g. "✅ "
      "pmd_changeset": "",                                   // e.g. "🧩 "
      "duration": ""                                         // e.g. "⏱️ "
    },
    "quick_links": {
      "tile_1": "Open Logs",
      "tile_2": "Original PMD Report",
      "tile_3": "TMD High Patterns",                        // As requested
      "tile_4": "ForceDeploy"
    }
  }
}
